# Application Configuration
NODE_ENV=development
PORT=5000
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password
MONGO_DATABASE=tarkeba
MONGO_PORT=27017

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=password
REDIS_PORT=6379

# JWT Configuration
ACCESS_JWT_SECRET=your-access-jwt-secret-here
ACCESS_JWT_EXPIRY=15m
REFRESH_JWT_SECRET=your-refresh-jwt-secret-here
REFRESH_JWT_EXPIRY=7d
RESET_JWT_EXPIRY=30m
JWT_ISSUER=tarkeba-ecommerce
JWT_AUDIENCE=tarkeba-ecommerce-users

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback
GOOGLE_SECRET=your-google-secret

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@gmail.com
# How to get the mail password
# step 1: go to manage google user account
# step 2: search for app passwords
# step 3: create your password app
MAIL_PASSWORD=your-app-password
MAIL_FROM_NAME=Tarkeba E-commerce
MAIL_FROM=noreply@tarkeba.com

# SendGrid (Alternative)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# Mailgun (Alternative)
# EMAIL_PROVIDER=mailgun
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=your-mailgun-domain

# Paymob Configuration
PAYMOB_API_KEY=your-paymob-api-key
PAYMOB_BASE_URL=https://accept.paymob.com/api
PAYMOB_SECRET_URL=your-paymob-secret-key
PAYMOB_PUBLIC_URL=your-paymob-public-key
PAYMOB_WALLET_INTEGRATION_ID=your-wallet-integration-id
PAYMOB_HMAC_SECRET=your-paymob-hmac-secret

# File Storage Configuration
STORAGE_PROVIDER=cloudinary
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# AWS S3 (Alternative)
# STORAGE_PROVIDER=s3
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-s3-bucket-name
# AWS_CLOUDFRONT_URL=https://your-cloudfront-domain.com

# Cloudinary (Alternative)
# STORAGE_PROVIDER=cloudinary
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
THROTTLE_SKIP_KEY=your-throttle-skip-key

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-here

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Queue Configuration
AGENDA_DB_COLLECTION=agendaJobs
AGENDA_MAX_CONCURRENCY=20

# Health Check
HEALTH_CHECK_TIMEOUT=5000
